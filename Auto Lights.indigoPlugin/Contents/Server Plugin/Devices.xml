<?xml version="1.0"?>
<!-- If your plugin defines device types, you can define them here.

     Devices must specify their type (via the type attribute):

        relay (ON/OFF/STATUS)
        dimmer (ON/OFF/DIM/BRIGHTEN/SET BRIGHTNESS/STATUS)
        speedcontrol (ON/OFF/SET SPEED LEVEL/SET SPEED INDEX/INCREASE/DECREASE/STATUS)
        sensor (ON/OFF/STATUS)
        thermostat
        sprinkler
        custom

     The first six inherit states, actions and events from Indigo. You can
     also specify your own custom actions and additional states, if needed.

     All of the Device examples below specify the custom type and therefore
     must define their own states and actions. See the other example device
     plugins that illustrate overriding an existing native type (relay, dimmer,
     thermostat, etc.).

     Devices must also specify a unique type_id - so, for instance, if you define
     2 relay type devices then your plugin can distinguish between the two by
     the type_id.
-->

<Devices>
    <Device type="relay" id="auto_lights_zone">
        <Name>Auto Lights Zone</Name>
        <States>
            <State id="locked">
                <ValueType>Boolean</ValueType>
                <TriggerLabel>Locked</TriggerLabel>
                <ControlPageLabel>Locked</ControlPageLabel>
            </State>
            <State id="on_off_lights">
                <ValueType>String</ValueType>
                <TriggerLabel>On/Off Lights</TriggerLabel>
                <ControlPageLabel>On/Off Lights</ControlPageLabel>
            </State>
            <State id="off_lights">
                <ValueType>String</ValueType>
                <TriggerLabel>Off Lights</TriggerLabel>
                <ControlPageLabel>Off Lights</ControlPageLabel>
            </State>
            <State id="presence_devices">
                <ValueType>String</ValueType>
                <TriggerLabel>Presence Devices</TriggerLabel>
                <ControlPageLabel>Presence Devices</ControlPageLabel>
            </State>
            <State id="luminance_devices">
                <ValueType>String</ValueType>
                <TriggerLabel>Luminance Devices</TriggerLabel>
                <ControlPageLabel>Luminance Devices</ControlPageLabel>
            </State>
            <State id="minimum_luminance">
                <ValueType>Number</ValueType>
                <TriggerLabel>Minimum Luminance</TriggerLabel>
                <ControlPageLabel>Minimum Luminance</ControlPageLabel>
            </State>
            <State id="adjust_brightness">
                <ValueType>Boolean</ValueType>
                <TriggerLabel>Adjust Brightness</TriggerLabel>
                <ControlPageLabel>Adjust Brightness</ControlPageLabel>
            </State>
            <State id="lock_duration">
                <ValueType>Number</ValueType>
                <TriggerLabel>Lock Duration</TriggerLabel>
                <ControlPageLabel>Lock Duration</ControlPageLabel>
            </State>
            <State id="extend_lock_when_active">
                <ValueType>Boolean</ValueType>
                <TriggerLabel>Extend Lock When Active</TriggerLabel>
                <ControlPageLabel>Extend Lock When Active</ControlPageLabel>
            </State>
            <State id="lock_extension_duration">
                <ValueType>Number</ValueType>
                <TriggerLabel>Lock Extension Duration</TriggerLabel>
                <ControlPageLabel>Lock Extension Duration</ControlPageLabel>
            </State>
            <State id="unlock_when_no_presence">
                <ValueType>Boolean</ValueType>
                <TriggerLabel>Unlock When No Presence</TriggerLabel>
                <ControlPageLabel>Unlock When No Presence</ControlPageLabel>
            </State>
        </States>
    </Device>
</Devices>
